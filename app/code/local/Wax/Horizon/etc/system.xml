<?xml version="1.0"?>

<config>
    <tabs>
        <waxhorizon translate="label" module="wax_horizon">
            <label>Wax Extensions</label>
            <sort_order>100</sort_order>
        </waxhorizon>
    </tabs>
    <sections>
        <wax_horizon module="wax_horizon">
            <label>Wax - Horizon</label>
            <tab>waxhorizon</tab>
            <frontend_type>text</frontend_type>
            <sort_order>10</sort_order>
            <show_in_default>1</show_in_default>
            <show_in_website>0</show_in_website>
            <show_in_store>0</show_in_store>
            <groups>
                <general translate="label">
                    <label>General</label>
                    <sort_order>10</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <version translate="label">
                            <label>Extension Version</label>
                            <frontend_model>wax_horizon/adminhtml_system_config_version</frontend_model>
                            <sort_order>10</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </version>
                    </fields>
                </general>
                <message translate="label">
                    <label>Messages</label>
                    <sort_order>20</sort_order>
                    <show_in_default>1</show_in_default>
                    <show_in_website>0</show_in_website>
                    <show_in_store>0</show_in_store>
                    <fields>
                        <display_message translate="label">
                            <label>Display message</label>
                            <frontend_type>select</frontend_type>
                            <source_model>adminhtml/system_config_source_yesno</source_model>
                            <sort_order>1</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </display_message>
                        <message_content>
                            <label>Message content</label>
                            <frontend_type>textarea</frontend_type>
                            <sort_order>2</sort_order>
                            <show_in_default>1</show_in_default>
                            <show_in_website>0</show_in_website>
                            <show_in_store>0</show_in_store>
                        </message_content>
                    </fields>
                </message>
            </groups>
        </wax_horizon>
    </sections>
</config>
