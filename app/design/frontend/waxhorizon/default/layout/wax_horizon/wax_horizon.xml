<?xml version="1.0"?>
<layout version="0.1.0">
    <default>
        <reference name="head">
            <action method="addItem">
                <type>skin_css</type>
                <name>wax_accordion/css/styles.css</name>
            </action>
            <action method="addItem">
                <type>skin_js</type>
                <name>wax_accordion/js/accordion.js</name>
            </action>
        </reference>
        <reference name="header">
            <block type="wax_horizon/message" name="wax_horizon_message" template="wax_horizon/message.phtml"/>
        </reference>
        <reference name="content">
            <block type="cms/block" name="test">
                <action method="setBlockId">
                    <block_id>test</block_id>
                </action>
            </block>
        </reference>
        <reference name="footer">
            <block type="wax_horizon/copyright" name="wax_horizon_copyright" template="wax_horizon/copyright.phtml"/>
        </reference>
    </default>
</layout>
